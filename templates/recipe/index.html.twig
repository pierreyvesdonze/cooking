{% extends 'base.html.twig' %}

{% block title %}Recettes index{% endblock %}

{% block body %}
<h1 class="recipe-category-title">Recettes</h1>

{# Categories #}
{% include "recipe/_categories.html.twig" %}

{# Recipies #}
<div class="row">
    {% for recipe in recipies %}
    <div class="card-container col s6 m3" data-category="{{ recipe.category.title }}" data-title="{{ recipe.title }}">
        <a href="{{ path('app_recipe_show', {'id':recipe.id}) }}" class="card-link">
            <div class="card small">
                <div class="card-image">
                    <img src="{{ asset(recipe.image) }}">

                </div>
                <div class="card-content">
                    <span class="card-title">{{ recipe.title }}</span>
                </div>
            </div>
        </a>
    </div>
    {% else %}
    <tr>
        <td colspan="7">Aucune recette trouv√©e</td>
    </tr>
    {% endfor %}
</div>

<script src="{{ asset('assets/js/recipeFilter.js') }}"></script>
{% endblock %}