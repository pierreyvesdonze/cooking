{% extends 'base.html.twig' %}

{% block title %}Menu {{ weeklyMenu.title }}{% endblock %}

{% block body %}
<section>

    <h1>Menu {{ weeklyMenu.title }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Jour</th>
                <th>Petit déjeuner</th>
                <td>Déjeuner</td>
                <td>Diner</td>
            </tr>
        </thead>
        <tbody>
            {% for weeklyDay in weeklyMenu.weeklyDay %}
            <tr>
                <td>{{ weeklyDay.day }}</td>
                <td>{{ weeklyDay.breakfast }}</td>
                <td>{{ weeklyDay.lunch }}</td>
                <td>{{ weeklyDay.dinner }}</td>
            </tr>

            {% endfor %}
        </tbody>
    </table>
    <br>
    <div class="title-control-flex">
        <a href="{{ path('app_weekly_menu_index') }}" class="btn">Retour</a>
        {{ include('weekly_menu/_delete_form.html.twig') }}
    </div>
</section>
{% endblock %}