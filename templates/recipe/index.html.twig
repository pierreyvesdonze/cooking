{% extends 'base.html.twig' %}

{% block title %}Recettes index{% endblock %}

{% block body %}
<h1>Recettes</h1>

<div class="row">
    {% for recipe in recipes %}
    <div class="col s6 m3">
        <a href="{{ path('app_recipe_show', {'id':recipe.id}) }}" class="card-link">
            <div class="card small">
                <div class="card-image">
                    <img src="{{ asset(recipe.image) }}">

                </div>
                <div class="card-content">
                    <span class="card-title">{{ recipe.title }}</span>
                </div>
            </div>
        </a>
    </div>
    {% else %}
    <tr>
        <td colspan="7">Aucune recette trouv√©e</td>
    </tr>
    {% endfor %}
</div>
{% endblock %}